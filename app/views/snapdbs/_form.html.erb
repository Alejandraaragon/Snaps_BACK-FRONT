<%= form_with(model: snapdb) do |form| %>
  <% if snapdb.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(snapdb.errors.count, "error") %> prohibited this snapdb from being saved:</h2>

      <ul>
        <% snapdb.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class:"form-control" %>
  </div>

  <div>
    <%= form.label :image, style: "display: block" %>
    <%= form.file_field :image, class:"form-control", accept:"image/*", capture:"camara" %>
  </div>

  <div>
    <%= form.label :color, style: "display: block" %>
    <%= form.color_field :color %>
  </div>

  <div>
    <%= form.submit "Guardar snapdb", class:"btn btn-primary d-block w-100" %>
  </div>
<% end %>
